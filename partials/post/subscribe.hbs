{{#if @labs.members}}
<div class="post-section-wrapper subscribe">
	<div class="post-heading canvas">
		<span class="post-heading-text">{{t "Subscribe"}}</span>
	</div>

	<div class="post-section canvas">
		<form class="post-subscribe" data-members-form="subscribe">
			<p class="post-subscribe-text">{{t "Subscribe today and get access to a private newsletter and new content every week!"}}</p>

			<div class="post-subscribe-input members-page-input input-with-button">
				<input data-members-email type="email" class="input" placeholder="{{t "Type your email..."}}" />
				<div class="input-button">
					<div class="loader">{{> "icons/bars"}}</div>
					<button aria-label="Subscribe submit" type="submit">â†’</button>
				</div>
			</div>
			<div class="message-success"><strong>{{t "Great!"}}</strong> {{t "Check your inbox and click the link to complete subscription"}}</div>
			<div class="message-error">{{t "Please enter a valid email address!"}}</div>
		</form>
	</div>
</div>
{{/if}}
